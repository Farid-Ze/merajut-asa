{
  "name": "merajut-asa",
  "version": "0.1.0",
  "private": true,
  "description": "Platform filantropi digital berbasis komunitas dengan prinsip Gotong Royong Digital",
  "author": "Farid-Ze",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "apps/*",
    "apps/services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\"",
    "prepare": "husky install",
    "performance:budget": "npm run build && node scripts/performance-budget.js",
    "accessibility:audit": "npm run build && node scripts/accessibility-audit.js",
    "security:audit": "npm audit && npm run security:scan",
    "security:scan": "node scripts/security-scan.js"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "turbo": "^1.10.12",
    "prettier": "^3.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "lighthouse": "^10.4.0",
    "jest-axe": "^8.0.0",
    "axe-core": "^4.7.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "keywords": [
    "philanthropy",
    "community",
    "digital-platform",
    "accessibility",
    "performance",
    "microservices",
    "gotong-royong"
  ]
}
